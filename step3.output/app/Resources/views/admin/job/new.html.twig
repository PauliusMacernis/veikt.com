{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('vendor/bootstrap-datepicker-1.6.1/css/bootstrap-datepicker3.min.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('vendor/bootstrap-datepicker-1.6.1/js/bootstrap-datepicker.min.js') }}"></script>

    <script>
        jQuery( document ).ready(function() {
            $(".js-datepicker [name='job_form[datePosted][date]']").datepicker({
                format: 'yyyy-mm-dd',
                weekStart: 1,
                autoclose: true,
                todayHighlight: true
            });
            $(".js-datepicker [name='job_form[step1_downloadedTime][date]']").datepicker({
                format: 'yyyy-mm-dd',
                weekStart: 1,
                autoclose: true,
                todayHighlight: true
            });
        });
    </script>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1>New Job</h1>
            </div>
        </div>
    </div>

    {{ form_start(jobForm) }}

        {{ form_widget(jobForm) }}

        <button type="submit" class="btn btn-primary">Save</button>
    {{ form_end(jobForm) }}

{% endblock %}
