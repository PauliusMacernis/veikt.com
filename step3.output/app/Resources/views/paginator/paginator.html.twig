{#
  Source: http://dev.dbl-a.com/symfony-2-0/symfony2-and-twig-pagination/
  Updated by: Simon Schick <simonsimcity@gmail.com>
  Parameters:
    * currentFilters (array) : associative array that contains the current route-arguments
    * currentPage (int) : the current page you are in
    * paginationPath (string) : the route name to use for links
    * showAlwaysFirstAndLast (bool) : Always show first and last link (just disabled)
    * lastPage (int) : represents the total number of existing pages
#}
{% spaceless %}
    {% if paginator.maxPages > 1 %}

        {# the number of first and last pages to be displayed #}
        {% set extremePagesLimit = 3 %}

        {# the number of pages that are displayed around the active page #}
        {% set nearbyPagesLimit = 2 %}

        <div class="pagination">
            {% if paginator.currentPage > 1 %}
                <a href="{{ path(paginator.paginationPath, paginator.currentFilters|merge({page: paginator.currentPage-1})) }}">Previous</a>

                {% for i in range(1, extremePagesLimit) if ( i < paginator.currentPage - nearbyPagesLimit ) %}
                    <a href="{{ path(paginator.paginationPath, paginator.currentFilters|merge({page: i})) }}">{{ i }}</a>
                {% endfor %}

                {% if extremePagesLimit + 1 < paginator.currentPage - nearbyPagesLimit %}
                    <span class="sep-dots">...</span>
                {% endif %}

                {% for i in range(paginator.currentPage-nearbyPagesLimit, paginator.currentPage-1) if ( i > 0 ) %}
                    <a href="{{ path(paginator.paginationPath, paginator.currentFilters|merge({page: i})) }}">{{ i }}</a>
                {% endfor %}
            {% elseif paginator.showAlwaysFirstAndLast %}
                <span class="disabled">Previous</span>
            {% endif %}

            <a href="{{ path(paginator.paginationPath, paginator.currentFilters|merge({ page: paginator.currentPage })) }}"
               class="active">{{ paginator.currentPage }}</a>

            {% if paginator.currentPage < paginator.maxPages %}
                {% for i in range(paginator.currentPage+1, paginator.currentPage + nearbyPagesLimit) if ( i <= paginator.maxPages ) %}
                    <a href="{{ path(paginator.paginationPath, paginator.currentFilters|merge({page: i})) }}">{{ i }}</a>
                {% endfor %}

                {% if  (paginator.maxPages - extremePagesLimit) > (paginator.currentPage + nearbyPagesLimit) %}
                    <span class="sep-dots">...</span>
                {% endif %}

                {% for i in range(paginator.maxPages - extremePagesLimit+1, paginator.maxPages) if ( i > paginator.currentPage + nearbyPagesLimit ) %}
                    <a href="{{ path(paginator.paginationPath, paginator.currentFilters|merge({page: i})) }}">{{ i }}</a>
                {% endfor %}

                <a href="{{ path(paginator.paginationPath, paginator.currentFilters|merge({page: paginator.currentPage+1})) }}">Next</a>
            {% elseif paginator.showAlwaysFirstAndLast %}
                <span class="disabled">Next</span>
            {% endif %}
        </div>
    {% endif %}
{% endspaceless %}